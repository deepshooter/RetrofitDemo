<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_10dp"
        android:layout_marginBottom="7dp"
        android:elevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vL_adnl_newsLayout"
            android:background="@color/color_three"
            android:orientation="horizontal">


           <ImageView
               android:layout_width="130dp"
               android:layout_height="match_parent"
               android:id="@+id/vI_adnl_newsImage"
               android:scaleType="fitXY"
               android:layout_gravity="center"
              />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vT_adnl_newsTitle"
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:maxLines="2"
                    android:textColor="@color/color_four"
                    android:text="News Title News Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/vT_adnl_newsDate"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:textColor="@color/color_four"
                        android:text="10 Mar 2017"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_four"
                        android:layout_marginLeft="10dp"
                        android:visibility="invisible"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/vT_adnl_newsLocation"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:visibility="invisible"
                        android:textColor="@color/color_four"
                        android:text="Bangalore"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>
